<p id="notice">
	<%= notice %>
</p>

<h1>Leave Records</h1>

<table border="1">
	<thead>
		<tr>
			<th>Staff</th>
			<th>From date</th>
			<th>To date</th>
			<th>Apply date</th>
			<th>Reason</th>
			<th>Leave type</th>
			<th>State</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @leave_records.each do |leave_record| %>
		<tr>
			<td><%= leave_record.staff_id %></td>
			<td><%= leave_record.from_date %></td>
			<td><%= leave_record.to_date %></td>
			<td><%= leave_record.apply_date %></td>
			<td><%= leave_record.reason %></td>
			<td><%= leave_record.leave_type %></td>
			<td><%= leave_record.state %></td>
			<td><%= link_to 'Show', leave_record %></td>
			<td><%= link_to 'Edit', edit_leave_record_path(leave_record) %></td>
			<td><%= link_to 'Destroy', leave_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

